{
  "manifest_version": 3,
  "name": "Miti - Nepali Calendar",
  "version": "1.0.0",
  "description": "A beautiful Bikram Sambat (Nepali) calendar with notes, customization, and holiday highlighting for your new tab page.",
  "author": "Miti Calendar Team",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "storage"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Miti - Nepali Calendar"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
